@model ShopTARgv21.Models.Car.CarViewModel

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label" />
        </div>

        <div class="form-group row">
            <label asp-for="Owner" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Owner)
        </div>
        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Model)
        </div>
        <div class="form-group row">
            <label asp-for="Color" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Color)
        </div>
        <div class="form-group row">
            <label asp-for="Year" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Year)
        </div>
        <div class="form-group row">
            <label asp-for="Registration" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Registration)
        </div>
        <div class="form-group row">
            <label asp-for="VINcode" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.VINcode)
        </div>
        <div class="form-group row">
            <label asp-for="Weight" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Weight)
        </div>
        <div class="form-group row">
            <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Fuel)
        </div>
        <div class="form-group row">
            <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Transmission)
        </div>
        <div class="form-group row">
            <label asp-for="Additions" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Additions)
        </div>
        <div class="form-group row">
            <label asp-for="Passengers" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Passengers)
        </div>
    </dl>

    @foreach (var images in Model.Image)
    {
        <partial name="_Image" model="images" />
    }

    <form asp-action="DeleteConfirmation" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>
