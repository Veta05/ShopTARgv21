@model ShopTARgv21.Models.Car.CarEditViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}


<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />

        <div class="form-group row">
            <label asp-for="Owner" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Owner" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Model" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Color" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Color" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Year" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Year" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Registration" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Registration" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="VINcode" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="VINcode" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Weight" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Weight" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Fuel" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Transmission" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Transmission" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Additions" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Additions" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Passengers" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Passengers" class="form-control" />
            </div>
        </div>

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="car" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="car" type="submit" class="btn btn-primary" value="Create" />
        }

        <a asp-action="Index" class="btn btn-primary">Index</a>
    </form>
</div>
