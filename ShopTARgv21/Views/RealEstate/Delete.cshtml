@model ShopTARgv21.Models.RealEstate.RealEstateDeleteViewModel

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Spaceship</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label" />
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Address)
        </div>
        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.City)
        </div>
        <div class="form-group row">
            <label asp-for="County" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.County)
        </div>
        <div class="form-group row">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.BuildingType)
        </div>
        <div class="form-group row">
            <label asp-for="Size" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Size)
        </div>
        <div class="form-group row">
            <label asp-for="RoomNumber" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.RoomNumber)
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Price)
        </div>
        <div class="form-group row">
            <label asp-for="Contact" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Contact)
        </div>
    </dl>

    @foreach (var images in Model.FileToApis)
    {
        <partial name="_Images" model="images" />
    }


    <form asp-action="DeleteConfirmation" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>