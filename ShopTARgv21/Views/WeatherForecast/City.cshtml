@model ShopTARgv21.Models.WeatherForecast.CityViewModel
<h1>City</h1>

<div class="container">
        <h2>Forecast for the selected city</h2>
        <dl class="row">
        <div class="form-group row">
            <label asp-for="LocalObservationDateTime" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.LocalObservationDateTime)
        </div>


        <div class="form-group row">
            <label asp-for="EpochTime" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.EpochTime)
        </div>
        

        <div class="form-group row">
            <label asp-for="WeatherText" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.WeatherText)
        </div>


        <div class="form-group row">
            <label asp-for="WeatherIcon" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.WeatherIcon)
        </div>


        <div class="form-group row">
            <label asp-for="HasPrecipitation" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.HasPrecipitation)
        </div>


        <div class="form-group row">
            <label asp-for="IsDayTime" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.IsDayTime)
        </div>



        <div class="form-group row">
            <label asp-for="MobileLink" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.MobileLink)
        </div>

        <br />

        <div class="form-group row">
            <label asp-for="Link" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Link)
        </div>


        <div class="form-group row">
            <label asp-for="TempMetricValue" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TempMetricValue)
        </div>


        <div class="form-group row">
            <label asp-for="TempMetricUnit" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TempMetricUnit)
        </div>



        <div class="form-group row">
            <label asp-for="TempMetricUnitType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TempMetricUnitType)
        </div>




        <div class="form-group row">
            <label asp-for="TempImperialValue" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TempImperialValue)
        </div>



        <div class="form-group row">
            <label asp-for="TempImperialUnit" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TempImperialUnit)
        </div>


        <div class="form-group row">
            <label asp-for="TempImperialUnitType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TempImperialUnitType)
        </div>

        </dl>
</div>
